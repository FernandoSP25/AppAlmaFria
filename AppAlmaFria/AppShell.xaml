<?xml version="1.0" encoding="UTF-8" ?>

<Shell
    x:Class="AppAlmaFria.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppAlmaFria"
    xmlns:views="clr-namespace:AppAlmaFria.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="AppAlmaFria">
    <Shell.FlyoutHeader>
        <Grid HeightRequest="100" BackgroundColor="DarkSlateBlue">
        </Grid>
    </Shell.FlyoutHeader>
    <FlyoutItem Title="Busqueda ">
        
        <ShellContent Title="Categorias"
                      ContentTemplate="{DataTemplate views:CategoriaPage}" />
        
        <ShellContent Title="Producto"
                      ContentTemplate="{DataTemplate views:HomePage}" />
    </FlyoutItem>

    <FlyoutItem Title="Busqueda ">

        <ShellContent Title="cate"
                      ContentTemplate="{DataTemplate views:CategoriaPage}" />

        <ShellContent Title="Create"
                      ContentTemplate="{DataTemplate views:CreateAccount}" />
    </FlyoutItem>

</Shell>
